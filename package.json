{
	"name": "trello",
	"displayName": "trello",
	"description": "Allow you work with trello in vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ImpurestPath/vscode-trello.git"
	},
	"icon": "icon.png",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "screenshot.activate",
				"title": "Screenshot ðŸ“¸"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "screenshot.activate"
				}
			]
		},
		"configuration": {
			"title": "Screenshot",
			"properties": {
				"screenshot.shadow": {
					"type": "string",
					"description": "Shadow of the snippet node. Use any value for CSS `box-shadow`",
					"default": "rgba(0, 0, 0, 0.55) 0px 20px 68px"
				},
				"screenshot.transparentBackground": {
					"type": "boolean",
					"description": "Transparent background for containers",
					"default": false
				},
				"screenshot.backgroundColor": {
					"type": "string",
					"description": "Background color of snippet container. Use any value for CSS `background-color`",
					"format": "color-hex",
					"default": "#f2f2f2"
				},
				"screenshot.target": {
					"type": "string",
					"description": "Shoot with or without container",
					"default": "container",
					"enum": [
						"container",
						"snippet"
					],
					"enumDescriptions": [
						"Shoot with the container.",
						"Shoot with the snippet alone. If you want transparent padding, use `container` with `\"screenshot.transparentBackground\": true`"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"axios": "^0.19.0"
	}
}
