{
	"name": "trello",
	"displayName": "trello",
	"description": "Allow you work with trello in vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"icon": "images/trello-viewer-icon.png",
	"contributes": {
		"commands": [
			  {
				"command": "trelloViewer.refresh",
				"title": "Refresh",
				"category": "Trello Viewer",
				"icon": {
				  "light": "images/light/sync.svg",
				  "dark": "images/dark/sync.svg"
				}
			  },
			  {
				"command": "trelloViewer.addCard",
				"title": "Add Card",
				"category": "Trello Viewer List Action",
				"icon": {
				  "light": "images/light/plus.svg",
				  "dark": "images/dark/plus.svg"
				}
			  },
			  {
				"command": "trelloViewer.addScreenCode",
				"title": "Add ScreenCode",
				"category": "Trello Viewer Card Action"
			  }
		],
		"configuration": {
			"title": "Trello",
			"properties": {
			  "trelloViewer.viewColumn": {
				"type": "integer",
				"default": 2,
				"description": "Specifies which editor column markdown previewer opens at.\n-1 = Active, -2 = Beside, 1 = One, 2 = Two, etc.",
				"scope": "resource"
			  },
			  "trelloViewer.starredBoardsOnly": {
				"type": "boolean",
				"default": false,
				"description": "Controls whether to display starred boards only or all boards.",
				"scope": "resource"
			  }
			}
		  },
		  "menus": {
			"commandPalette": [
			  {
				"command": "trelloViewer.addCard",
				"when": "false"
			  },
			  {
				"command": "trelloViewer.addScreenCode",
				"when": "false"
			  }
			],
			"view/title": [
			  {
				"command": "trelloViewer.refresh",
				"when": "view == trelloTreeView",
				"group": "navigation@4"
			  }
			],
			"view/item/context": [
			  {
				"command": "trelloViewer.addCard",
				"when": "viewItem == list",
				"group": "inline@1"
			  },
			  {
				"command": "trelloViewer.addScreenCode",
				"when": "viewItem == card",
				"group": "1edit@3"
			  }
			]
		  },
		  "viewsContainers": {
			"activitybar": [
			  {
				"id": "trelloViewer",
				"title": "Trello Viewer",
				"icon": "images/trello-viewer-activity-bar.svg"
			  }
			]
		  },
		  "views": {
			"trelloViewer": [
			  {
				"id": "trelloTreeView",
				"name": "Trello Boards"
			  }
			]
		  }
		},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"axios": "^0.19.0"
	}
}
